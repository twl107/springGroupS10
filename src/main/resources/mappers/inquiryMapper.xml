<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springGroupS10.dao.InquiryDAO">

	<select id="getInquryList" resultType="com.spring.springGroupS10.vo.InquiryVO">
		select * from inquiry <if test="userId != 'admin'"> where userId = #{userId} </if> order by idx desc limit #{startIndexNo}, #{pageSize};
	</select>
	
	<select id="getTotRecCnt" resultType="int">
		<if test="part == '전체'">
			select count(*) from inquiry <if test="userId != 'admin'"> where userId = #{userId} </if> 
		</if>
		<if test="part != '전체'">
			select count(*) from inquiry where part = #{part} <if test="userId != 'admin'"> and userId = #{userId} </if> 
		</if>
	</select>

	<select id="getInquiryContent" resultType="com.spring.springGroupS10.vo.InquiryVO">
		select * from inquiry where idx = #{idx};
	</select>
	
	<select id="getInquiryReply" resultType="com.spring.springGroupS10.vo.InquiryReplyVO">
		select * from inquiryReply where inquiryIdx = #{idx};
	</select>
	
  <select id="getTotRecCntAdmin" resultType="int">
    select count(*) from inquiry <if test="part != '전체'"> where reply = #{part} </if>
  </select>




	
	
	
	<insert id="setInquiryInput">
		insert into inquiry values (default,#{vo.userId},#{vo.title},#{vo.part},default,#{vo.orderId},#{vo.content},#{vo.FName},#{vo.FSName},default);
	</insert>





	<update id="setInquiryUpdate">
		update inquiry set 
		title=#{vo.title},part=#{vo.part},wDate=now(),orderId=#{vo.orderId},content=#{vo.content} <if test="vo.FName != ''"> ,fName=#{vo.FName},FSName=#{vo.FSName} </if> where idx=#{vo.idx};
	</update>





	<delete id="setInquiryDelete">
		delete from inquiry where idx = #{idx};
	</delete>

	

</mapper>